{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'developer.info'|trans({}, 'GamesBundle') }}</h1>

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3>{{ developer.name }}</h3>
        </div>
        <div class="panel-body">

        </div>
    </div>

    <div class="pull-right col-md-1">
        {{ form_start(delete_form) }}
        {{ form_end(delete_form) }}
    </div>
    <a href="{{ path('developer_edit', { 'id': developer.id }) }}" class="btn btn-warning pull-right" role="button">
        {{ 'buttons.edit'|trans({}, 'GamesBundle') }}
    </a>

    <a href="{{ path('developer_index') }}" class="btn btn-default" role="button" aria-label="Left Align">
        <span class="glyphicon glyphicon-align-left" aria-hidden="true"></span>
        {{ 'buttons.back_list'|trans({}, 'GamesBundle') }}
    </a>
{% endblock %}
